{
  "name": "ts-ink-template-app",
  "version": "0.0.1",
  "license": "Apache 2.0",
  "bin": "dist/cli.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "rm -rf dist/ && tsc && chmod +x dist/cli.js",
    "build-watch": "tsc --watch",
    "start": "dist/cli.js",
    "build-and-start": "npm run build && dist/cli.js",
    "pretest": "npm run build",
    "test": "jest",
    "test-watch": "jest --watch",
    "start-watch": "nodemon --exitcrash -e ts,tsx,js,jsx --exec 'node dist/cli.js || exit 1'",
    "dev": "npm run build && npm-run-all -p -r build-watch start-watch",
    "lint": "eslint '**/src/**/*.{ts,tsx}' --quiet --fix"
  },
  "files": [
    "dist/cli.js"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "ink": "^3.2.0",
    "r3bl-ts-utils": "^1.0.16",
    "react": "^17.0.2",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^2.0.0",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.34",
    "eslint": "latest",
    "eslint-loader": "latest",
    "@typescript-eslint/parser": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "ink-testing-library": "^2.1.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
